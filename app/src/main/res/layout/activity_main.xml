<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/play_illinois"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="156dp"
        android:layout_marginLeft="155dp"
        android:layout_marginRight="156dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/illinoisimg" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/play_iowa"
        app:layout_constraintTop_toBottomOf="@+id/play_illinois"
        app:srcCompat="@drawable/big"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/play_indiana"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/play_msu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play_nwu"
        app:srcCompat="@drawable/indiana" />

    <ImageButton
        android:id="@+id/play_purdue"
        android:layout_width="94dp"
        android:layout_height="100dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play_msu"
        app:layout_constraintTop_toBottomOf="@+id/play_wis"
        app:srcCompat="@drawable/purdue" />

    <ImageButton
        android:id="@+id/play_iowa"
        android:layout_width="113dp"
        android:layout_height="109dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/play_msu"
        app:layout_constraintEnd_toStartOf="@+id/play_wis"
        app:layout_constraintStart_toEndOf="@+id/play_nwu"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/iowa" />

    <ImageButton
        android:id="@+id/play_wis"
        android:layout_width="126dp"
        android:layout_height="111dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/play_purdue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/play_iowa"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/uwm" />

    <ImageButton
        android:id="@+id/play_nwu"
        android:layout_width="96dp"
        android:layout_height="113dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/play_indiana"
        app:layout_constraintEnd_toStartOf="@+id/play_iowa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/northwestern" />

    <ImageButton
        android:id="@+id/play_msu"
        android:layout_width="143dp"
        android:layout_height="117dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/play_purdue"
        app:layout_constraintStart_toEndOf="@+id/play_indiana"
        app:layout_constraintTop_toBottomOf="@+id/play_iowa"
        app:srcCompat="@drawable/msu" />

</android.support.constraint.ConstraintLayout>